#!/usr/bin/env python

import gevent
import signal
from sys import argv, exit
import psutil
from subprocess import PIPE
from multiprocessing import cpu_count
from os import system


is_running = True
processes = []

def keep_alive():
    global is_running
    global processes
    while is_running:
        for i in range(len(processes)):
            if not processes[i].is_running():
                processes[i] = psutil.Popen(cmd, shell=False, stdout=PIPE)
        gevent.sleep(1)

def print_info():
    global is_running
    global processes
    while is_running:
        s = ["NUM\tCPU\tMEM\tAFFINITY\tSTATUS\t\tUSERTIME\tSYSTEMTIME"]
        for p in processes:
            s.append("[%d]\t%.2f\t%.2f\t%s\t\t%8s\t%s\t\t%s" % \
                     (processes.index(p),
                      p.get_cpu_percent(),
                      p.get_memory_percent(),
                      ",".join(map(str, p.get_cpu_affinity())),
                      p.status,
                      p.get_cpu_times().user,
                      p.get_cpu_times().system,))
        system("clear")
        print "\n".join(s)
        gevent.sleep(1)

def killall():
    global processes
    for p in processes:
        p.terminate()
        try:
            p.wait(5)
        except TimeoutExpired:
            p.kill()
            sleep(2)
        if p.is_running():
            print "Fail to terminate process: [%d]" % p.pid

def stop():
    global is_running
    is_running = False


if __name__ == '__main__':
    if len(argv) < 2:
        exit('Usage: %s (proxy|worker) [--view]' % __file__)

    launch_type = argv[1]
    cmd = "./%s" % launch_type

    if launch_type == "worker":
        for i in range(cpu_count()):
            p = psutil.Popen(cmd, shell=False, stdout=PIPE)
            #p.set_cpu_affinity([i])
            processes.append(p)
    else:
        p = psutil.Popen(cmd, shell=False, stdout=PIPE)
        processes.append(p)

    gevent.signal(signal.SIGTERM, stop)
    gevent.signal(signal.SIGQUIT, stop)
    gevent.signal(signal.SIGINT, stop)

    ka = gevent.spawn(keep_alive)

    if "--view" in argv:
        pi = gevent.spawn(print_info)
        pi.join()
    
    ka.join()
    killall()

